(library
 (name oui)
 (public_name oui.lib)
 (libraries fmt opam-format opam-client unix yojson)
 (preprocess
  (pps ppx_deriving_yojson))
 (foreign_stubs
  (language c)
  (names win_ldd_c)))

(rule
 (target dataDir.ml)
 (deps (source_tree ../../data))
 (action
  (with-stdout-to %{target}
    (run ocaml-crunch ../../data -m plain -o dataDir.ml))))
